<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ex05Activity">

    <TextView
        android:id="@+id/expressionTextView"
        android:layout_width="0dp"
        android:layout_height="114dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:textAlignment="viewEnd"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:textAlignment="viewEnd"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expressionTextView" />

    <Button
        android:id="@+id/btnNumberSeven"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="79dp"
        android:layout_height="69dp"
        android:text="C"
        app:layout_constraintStart_toEndOf="@+id/btnNumberNine"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView" />

    <Button
        android:id="@+id/btnNumberEight"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:text="8"
        app:layout_constraintStart_toEndOf="@+id/btnNumberSeven"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView" />

    <Button
        android:id="@+id/btnNumberNine"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:text="9"
        app:layout_constraintStart_toEndOf="@+id/btnNumberEight"
        app:layout_constraintTop_toBottomOf="@+id/resultTextView" />

    <Button
        android:id="@+id/btnNumberFour"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNumberSeven" />

    <Button
        android:id="@+id/btnNumberOne"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNumberFour" />

    <Button
        android:id="@+id/btnPoint"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:text="."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNumberOne" />

    <Button
        android:id="@+id/btnNumberZero"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/btnPoint"
        app:layout_constraintTop_toBottomOf="@+id/btnNumberTwo" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/btnNumberZero"
        app:layout_constraintTop_toBottomOf="@+id/btnNumberThree" />

    <Button
        android:id="@+id/btnNumberTwo"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/btnNumberOne"
        app:layout_constraintTop_toBottomOf="@+id/btnNumberFive" />

    <Button
        android:id="@+id/btnNumberThree"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/btnNumberTwo"
        app:layout_constraintTop_toBottomOf="@+id/btnNumberSix" />

    <Button
        android:id="@+id/btnNumberSix"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/btnNumberFive"
        app:layout_constraintTop_toBottomOf="@+id/btnNumberNine" />

    <Button
        android:id="@+id/btnNumberFive"
        android:layout_width="110dp"
        android:layout_height="87dp"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/btnNumberFour"
        app:layout_constraintTop_toBottomOf="@+id/btnNumberEight" />

    <Button
        android:id="@+id/btnSum"
        android:layout_width="79dp"
        android:layout_height="69dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSubtraction" />

    <Button
        android:id="@+id/btnSubtraction"
        android:layout_width="79dp"
        android:layout_height="69dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMultiplication" />

    <Button
        android:id="@+id/btnMultiplication"
        android:layout_width="79dp"
        android:layout_height="69dp"
        android:text="*"
        app:layout_constraintStart_toEndOf="@+id/btnNumberSix"
        app:layout_constraintTop_toBottomOf="@+id/btnDivision" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="79dp"
        android:layout_height="69dp"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/btnNumberNine"
        app:layout_constraintTop_toBottomOf="@+id/btnClear" />

</androidx.constraintlayout.widget.ConstraintLayout>